                            </li>

                        </ul>

                    </div>
                </div>
            </nav>


        </div>

    </header>




    <section id="book_cards">
        <div class="container">
            <% for(let i=0; i<booksData.length/2 ; i++) {%>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="card ">
                            <h5 class="card-header">
                                <%= booksData[i].book_title %>
                            </h5>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong> ISBN : </strong>
                                    <%= booksData[i].isbn %>
                                </p>
                                <p class="card-text">
                                    <strong> Writtern by : </strong>
                                    <%= booksData[i].author_name %>
                                </p>
                                <p class="card-text">
                                    <strong> Price : </strong>
                                    <%= booksData[i].price %>
                                </p>
                                <p class="card-text">
                                    <strong> Quantity : </strong>
                                    <%= booksData[i].quantity %>
                                </p>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card ">
                            <h5 class="card-header">
                                <%= booksData[i+1].book_title %>
                            </h5>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong> ISBN :</strong>
                                    <%= booksData[i+1].isbn %>
                                </p>
                                <p class="card-text">
                                    <strong> Writtern by : </strong>
                                    <%= booksData[i+1].author_name %>
                                </p>
                                <p class="card-text">
                                    <strong> Price : </strong>
                                    <%= booksData[i].price %>
                                </p>
                                <p class="card-text">
                                    <strong> Quantity : </strong>
                                    <%= booksData[i].quantity %>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
                <% } %>


